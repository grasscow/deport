= form_for @user do |f|
  =error_messages_for(@user)


  .form.group
    = f.label :email
    = f.email_field :email, class: "form-control"

  .form.group
    = f.label :password
    = f.password_field :password, class: "form-control"

  .form.group
    = f.label :password_conformation
    = f.password_field :password_conformation, class: "form-control"
  .actions
    = f.submit 'зарегистрироваться', class: "btn btn-primary"
